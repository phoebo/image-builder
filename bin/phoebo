#!/usr/bin/env ruby

# Exit cleanly from an early interrupt
Signal.trap("INT") { exit 130 }

require 'phoebo'

begin
  app = Phoebo::Application.new(ARGV)
  code = app.run
  app.cleanup
  exit code

rescue Phoebo::PhoeboError => err
  $stderr.puts "Error: ".red + err.message
  $stdout.puts
  exit err.status_code
ensure
  app.cleanup
end